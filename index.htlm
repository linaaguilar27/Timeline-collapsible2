<script>
  const acc = document.querySelectorAll('.accordion');
  acc.forEach(section => {
    section.querySelector('.step').addEventListener('click', () => {
      acc.forEach(s => s.classList.remove('active')); // close others
      section.classList.add('active'); // open clicked
    });
  });
</script>
