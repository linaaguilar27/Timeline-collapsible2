<style>
  body {
    color: #285C4D;
    font-family: 'Greycliff CF', sans-serif;
    line-height: 1.75;
  }

  a {
    color: #285C4D;
    text-decoration: none;
  }

  a:visited {
    color: #285C4D;
  }

  .accordion {
    margin-bottom: 20px;
    border-bottom: 1px solid #ccc;
  }

  .accordion .step {
    font-family: 'Greycliff CF Extra', sans-serif;
    font-size: 20px;
    cursor: pointer;
    padding: 10px 15px;
    position: relative;
    background-color: #f5f9ed;
    border-left: 5px solid #78BE20;
  }

  .accordion .step:hover {
    background-color: #e2f1d4;
  }

  .accordion .items {
    display: none;
    padding: 15px 20px;
    margin-left: 0;
    text-align: justify;
    background-color: #fff;
    border-left: 5px solid #d9e7cb;
    box-shadow: 0 0 6px rgba(0,0,0,0.05);
  }

  .accordion.active .items {
    display: block;
  }

  .section-title {
    font-family: 'Greycliff CF Extra', sans-serif;
    font-weight: bold;
    margin-top: 10px;
  }

  .section-content {
    line-height: 26px;
  }

  ul {
    margin-bottom: 1rem;
    padding-left: 20px;
  }

  p {
    margin-bottom: 1rem;
  }
</style>

